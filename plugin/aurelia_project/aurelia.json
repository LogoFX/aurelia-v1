{
  "type": "project:plugin",
  "paths": {
    "root": "dev-app",
    "resources": "../src",
    "elements": "../src/elements",
    "attributes": "../src/attributes",
    "valueConverters": "../src/value-converters",
    "bindingBehaviors": "../src/binding-behaviors"
  },
  "plugin": {
    "source": {
      // @if babel
      "js": "src/**/*.js",
      // @endif

      // @if typescript
      "js": "src/**/*.ts",
      // @endif

      // @if ! (less || sass || stylus)
      "css": "src/**/*.css",
      // @endif

      // @if less
      "css": "src/**/*.less",
      // @endif

      // @if sass
      "css": "src/**/*.scss",
      // @endif

      // @if stylus
      "css": "src/**/*.styl",
      // @endif

      "html": "src/**/*.html",
      "json": "src/**/*.json"
    }
  }
}